{
  "compilerOptions": {
    "outDir": "build",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": "./",
    "sourceMap": true,
    "types": [
      "chrome"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}